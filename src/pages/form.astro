    <script>
        const drawerBtn = document.querySelector('.drawer-btn');
        const drawerNav = document.querySelector('.drawer-nav');
        const drawerLinks = drawerNav.querySelectorAll('a'); // メニュー内のリンク

        // ボタンで開閉
        drawerBtn.addEventListener('click', () => {
            if (drawerNav.classList.contains('active')) {
                drawerNav.classList.remove('active');
                drawerNav.classList.add('closing');
                drawerBtn.classList.remove('active-btn');
            } else {
                drawerNav.classList.add('active');
                drawerNav.classList.remove('closing');
                drawerBtn.classList.add('active-btn');
            }
        });

        // メニュー内リンククリックで閉じる
        drawerLinks.forEach(link => {
            link.addEventListener('click', () => {
                drawerNav.classList.remove('active');
                drawerNav.classList.add('closing');
                drawerBtn.classList.remove('active-btn');
            });
        });
    </script>

    <script>
   const form = document.getElementById("contact-form");
const nameInput = document.getElementById("name");
const telInput = document.getElementById("tel");
const emailInput = document.getElementById("email");
const typeInput = document.getElementById("type");
const messageInput = document.getElementById("message");

const errorName = document.getElementById("error-name");
const errorTel = document.getElementById("error-tel");
const errorEmail = document.getElementById("error-email");
const errorType = document.getElementById("error-type");
const errorMessage = document.getElementById("error-message");

// リアルタイムバリデーション
function validateName() {
  const value = nameInput.value.trim();
  if (value.length === 0) return "名前を入力してください";
  if (value.length > 50) return "50文字以内で入力してください";
  return "";
}

function validateTel() {
  const value = telInput.value.trim();
  if (value && !/^\d{10,11}$/.test(value)) return "電話番号は10〜11桁の数字で入力してください";
  return "";
}

function validateEmail() {
  const value = emailInput.value.trim();
  const pattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!pattern.test(value)) return "有効なメールアドレスを入力してください";
  return "";
}

function validateType() {
  if (typeInput.value === "") return "種別を選択してください";
  return "";
}

function validateMessage() {
  const value = messageInput.value.trim();
  if (value.length === 0) return "お問い合わせ内容を入力してください";
  if (value.length > 1000) return "1000文字以内で入力してください";
  return "";
}

// イベントリスナーでリアルタイム更新
nameInput.addEventListener("input", () => errorName.textContent = validateName());
telInput.addEventListener("input", () => errorTel.textContent = validateTel());
emailInput.addEventListener("input", () => errorEmail.textContent = validateEmail());
typeInput.addEventListener("change", () => errorType.textContent = validateType());
messageInput.addEventListener("input", () => errorMessage.textContent = validateMessage());

// 送信時にもチェック
form.addEventListener("submit", (e) => {
  e.preventDefault();
  let isValid = true;

  errorName.textContent = validateName();
  errorTel.textContent = validateTel();
  errorEmail.textContent = validateEmail();
  errorType.textContent = validateType();
  errorMessage.textContent = validateMessage();

  if (errorName.textContent) isValid = false;
  if (errorTel.textContent) isValid = false;
  if (errorEmail.textContent) isValid = false;
  if (errorType.textContent) isValid = false;
  if (errorMessage.textContent) isValid = false;

  if (isValid) {
    // ここで Formspree や Google Apps Script 送信処理を呼ぶ
    console.log("送信可能です");
  }
});

    </script>

