    <script>
        const drawerBtn = document.querySelector('.drawer-btn');
        const drawerNav = document.querySelector('.drawer-nav');
        const drawerLinks = drawerNav.querySelectorAll('a'); // メニュー内のリンク

        // ボタンで開閉
        drawerBtn.addEventListener('click', () => {
            if (drawerNav.classList.contains('active')) {
                drawerNav.classList.remove('active');
                drawerNav.classList.add('closing');
                drawerBtn.classList.remove('active-btn');
            } else {
                drawerNav.classList.add('active');
                drawerNav.classList.remove('closing');
                drawerBtn.classList.add('active-btn');
            }
        });

        // メニュー内リンククリックで閉じる
        drawerLinks.forEach(link => {
            link.addEventListener('click', () => {
                drawerNav.classList.remove('active');
                drawerNav.classList.add('closing');
                drawerBtn.classList.remove('active-btn');
            });
        });
    </script>

    <script>
   document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("contact-form");
  const inputs = Array.from(form.querySelectorAll("input, select, textarea"));

  // スマホで入力時のズーム防止
  inputs.forEach(el => el.style.fontSize = "16px");

  // 各 input にリアルタイムバリデーション表示（任意）
  inputs.forEach(input => {
    input.addEventListener("input", () => {
      const errorEl = input.nextElementSibling;
      if (errorEl && errorEl.classList.contains("error-msg")) {
        errorEl.remove();
      }
    });
  });

  form.addEventListener("submit", async function(e) {
    e.preventDefault(); // 送信を止める

    let allValid = true;

    // バリデーションチェック
    inputs.forEach(input => {
      const errorEl = input.nextElementSibling;
      if (errorEl && errorEl.classList.contains("error-msg")) errorEl.remove();

      if (!input.checkValidity()) {
        allValid = false;
        const msg = document.createElement("div");
        msg.classList.add("error-msg");
        msg.style.color = "red";
        msg.style.fontSize = "0.9em";
        msg.textContent = input.validationMessage;
        input.after(msg);
      }
    });

    if (!allValid) return; // エラーあれば送信せず終了

    // 次の input に自動移動（最後の input は移動なし）
    const currentIndex = inputs.findIndex(input => input === document.activeElement);
    const nextIndex = currentIndex + 1;
    if (nextIndex < inputs.length) {
      inputs[nextIndex].focus();
    }

    // ここにフォーム送信処理を入れる
    const formData = {
      name: document.getElementById("name").value,
      tel: document.getElementById("tel").value,
      email: document.getElementById("email").value,
      type: document.getElementById("type").value,
      message: document.getElementById("message").value
    };

    try {
      const response = await fetch("https://script.google.com/macros/s/AKfycbwWN5iyvLXAfzxjcLGSPqEgd4Q3DyYcmL1gMiVYgvksqPHLNqSqHJ6bwGAYcPUe2b8IFg/exec", {
        method: "POST",
        body: JSON.stringify(formData),
        headers: { "Content-Type": "application/json" }
      });

      const result = await response.json();
      if (result.result === "success") {
        alert("送信完了！");
        form.reset();
        inputs[0].focus();
      } else {
        alert("送信エラー: " + result.error);
      }
    } catch (err) {
      alert("送信に失敗しました: " + err.message);
    }
  });
});

    </script>

